<view>
    <!-- 搜索及定位 -->
    <view class="search">
        <view class="address" bindtap="onRegion">
            <text>{{address}} </text>
        </view>
        <!-- 搜索 -->
        <van-search value="{{ value }}" background="#4fc08d" shape="round" placeholder="请输入搜索关键词" use-action-slot
            bind:change="onChange">
            <view slot="action" bind:tap="onClick">搜索</view>
        </van-search>
    </view>
    <view class="content">
        <view class="content_top">推荐职位</view>
        <view class="list" wx:for="{{newsList}}" wx:key="uuid" data-id="{{item.uuid}}" user-select="{{true}}"
            bindtap="gotoComent">
            <view class="list_item_1">
                <text class="list_item_text1">{{item.title}}</text>
                <text class="list_item_text2">{{item.price}}</text>
            </view>
            <view class="list_item_2">
                <text class="list_item_text3">{{item.company}}</text>
                <text class="list_item_text4">{{item.NumberP}}</text>
                <text class="list_item_text5">{{item.financing}}</text>
            </view>
            <view class="list_item_3">
                <text>{{item.Years}}</text>
                <text>{{item.education}}</text>
                <text>{{item.technology1}}</text>
                <text>{{item.technology2}}</text>
                <text>{{item.technology3}}</text>
            </view>
            <view class="list_item_4">
                <view>
                    <image src="{{item.avatar}}"></image>
                    <text class="list_item_text6">{{item.name}}</text>
                </view>
                <text class="list_item_text7">{{item.region}}</text>
            </view>
        </view>
    </view>
</view>