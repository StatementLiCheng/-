/* login.wxss */

page {
	width: 100%;
	height: 100%;
	font-family: Source Han Sans CN;
}

.login {
	display: flex;
	align-items: center;
	flex-direction: column;
	padding: 72rpx;
}
.login1 {
	display: flex;
	align-items: center;
	flex-direction: column;
	padding: 72rpx;
}

form{
	width: 100%;
	height: 100%;
	overflow: hidden;
}

.title {
	width: 100%;
	font-size: 50rpx;
	font-style: normal;
	font-weight: bold;
	color: #4fc08d;
	text-align: center;
	margin-bottom: 140rpx;
}
.title1 {
	width: 100%;
	font-size: 50rpx;
	font-style: normal;
	font-weight: bold;
	color: #59cdf0;
	text-align: center;
	margin-bottom: 140rpx;
}
.login-tips {
	text-align: center;
	margin-top: 40rpx;
	color: #999999;
}

.input-box {
	width: 100%;
	height: 100rpx;
	padding: 20rpx;
	border: 2rpx solid #4fc08d;
	box-sizing: border-box;
	margin-bottom: 40rpx;
}
.input-box1 {
	width: 100%;
	height: 100rpx;
	padding: 20rpx;
	border: 2rpx solid #59cdf0;
	box-sizing: border-box;
	margin-bottom: 40rpx;
}
.error {
	display: flex;
	align-items: center;
	width: 100%;
	height: 120rpx;
	padding-left: 20rpx;
	box-sizing: border-box;
	margin-bottom: 40rpx;
	color:red;
	background: rgba(208, 33, 41, 0.1);
}

.login-btn {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 100rpx;
	color: #FFFFFF;
	background:#4fc08d;
}
.login-btn1 {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 100%;
	height: 100rpx;
	color: #FFFFFF;
	background:#59cdf0;
}

.zhaopin{
	margin-top: 10px;
	display: flex;
	margin-left: auto;
	color: #4fc08d;
}
.zhaopin1{
	margin-top: 10px;
	display: flex;
	margin-left: auto;
	color: #59cdf0;
}
