
.userinfo {
  padding-top: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 140rpx;
  height: 140rpx;
  margin: 30rpx;
  border-radius: 50%;
}
.userinfo-avatar image{
  width: 100%;
  height: 100%;
}

.usermotto {
  margin-top: 200px;
}

.header{
  width: 100%;
  height: 250rpx;
  background-color:#4FC08D;
}
.log_title{
  margin-left: 30rpx;
}
.title{
  font-size: 60rpx;
  font-weight: 600;
  color: #ffff;
}
.go_title{
  color: #ffff;
}
.icons{
  margin: 0 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.icon_item{
  position: relative;
  text-align: center;
  width: 150rpx;
  height: 200rpx;
  text-align: center;
  line-height: 150rpx;
}
.items_image{
  position: absolute;
  top: 30rpx;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
}
.item_name{
  position: absolute;
  top: 80rpx;
  width: 100%;
  height: 100rpx;
  font-size: 26rpx;
  column-rule: #4e4e4e;
  font-weight: 500;
}
image{
  width: 100rpx;
  height: 100rpx;
}

.nav_right{
  padding: 0 40rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.nav_right:active{
  background-color: rgb(235, 235, 235);
}
.nav_right_title{
  color: #4e4e44;
  font-weight: 500;
}
.hele_title{
  font-size: 40rpx;
  font-weight: 600;
  color: #4e4e44;
}

.nav_help{
  margin: 50rpx 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.nav_help_item{
  position: relative;
  width: 320rpx;
  height: 120rpx;
  background-color: #ffffff;
  box-shadow: 0.5rpx 0.5rpx 20rpx 0.2rpx rgb(230, 230, 230);
  border-radius: 20rpx;
}

.hele_text1{
 position: relative;
  width: 60%;
  float: left;
}
.help_text1 text{
  display: block;
}
.help_text1 text:nth-child(1){
  margin-top: 10rpx;
  font-size: 40rpx;
  font-weight: 600;
  color: #4e4e4e;
}
.help_image{
  position: relative;
  width: 40%;
  left:16rpx;
  top:-90rpx;
  height: 120rpx;
  float:right;
  border-radius: 50%;
}
.help_image image{
  width: 80%;
  height: 80%;
  border-radius: 20rpx;
}
.help_text1 text:nth-child(2){
  font-size: 24rpx;
  color: rgb(160, 160, 160);
}

.brs{
  height: 20rpx;
}
/* list列表区 */
.nav_list{
  padding: 0 40rpx;
  height: 100rpx;
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.nav_list:active{
  background-color: rgb(235, 235, 235);
}
.nav_list_title{
  margin-left: 30rpx;
  color: #4e4e4e;
  font-weight: 600;
}
.nav_list_item van-icon{
  color:#4e4e4e !important;
  font-weight: 700 !important;
}

button:not([size='mini']){
  width: 300px !important;
  height: 35px !important;
  color: rgb(167, 169, 170) !important;
  font-size: 30rpx !important;
  font-weight: 600 !important;
}
.btnBox{
  margin-top: 50rpx;
}
.backbtn{
  background-color: rgb(255, 255, 255) !important;
}

.footer{
  margin: 30rpx;
  text-align: center;
}
.footer_content{
  font-size: 20rpx;
  color: #aaa;
}

